<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.*?>



<BorderPane id="familleProduitForm"
	stylesheets="@../../styles/Produit.css"
	xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.pharmacy.controller.ProduitController">
	<left>
		<HBox spacing="10.0">
			<ImageView id="boxImage" fitHeight="100.0" fitWidth="150.0">
				<image>
					<Image url="@../../images/medica.png" />
				</image>
				<HBox.margin>
					<Insets bottom="20.0" left="20.0" top="10.0" right="10.0" />
				</HBox.margin>
			</ImageView>
		</HBox>
	</left>
	<center>
		<VBox prefHeight="300.0" prefWidth="350.0" spacing="10.0"
			BorderPane.alignment="CENTER">
			<children>
				<Label id="labelFamProduitTitle" text="Famille de Produits">
					<font>
						<Font size="20.0" />
					</font>
					<VBox.margin>
						<Insets bottom="10.0" left="10.0" top="30.0" />
					</VBox.margin>
				</Label>
				<HBox id="produit_fam_field">
					<Label id="codeFamille" text="Code Famille">
						<font>
							<Font size="20.0" />
						</font>
						<HBox.margin>
							<Insets left="10.0" right="10.0" />
						</HBox.margin>
					</Label>
					<TextField fx:id="codeFam" promptText="Code famille">
						<HBox.margin>
							<Insets left="10.0" right="25.0" />
						</HBox.margin>
					</TextField>
				</HBox>

				<HBox>
					<Label id="nomFamille" text="Nom Famille">
						<font>
							<Font size="20.0" />
						</font>
						<HBox.margin>
							<Insets left="10.0" right="10.0" />
						</HBox.margin>
					</Label>
					<TextField fx:id="nomFam" promptText="Nom Famille">
						<HBox.margin>
							<Insets left="10.0" right="25.0" />
						</HBox.margin>
					</TextField>
				</HBox>
				<TableView fx:id="familleProduitTable" prefHeight="400.0"
					prefWidth="679.0" tableMenuButtonVisible="true">
					<columns>
						<TableColumn fx:id="colCodeFam" maxWidth="4000.0"
							prefWidth="75.0" text="Code Famille" />
						<TableColumn fx:id="colNomFam" maxWidth="4000.0"
							prefWidth="75.0" text="Nom Famille" />
						<TableColumn fx:id="colEdit" maxWidth="2000.0"
							prefWidth="75.0" text="Edit" />
					</columns>
					<VBox.margin>
						<Insets left="10.0" right="5.0" />
					</VBox.margin>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>

				</TableView>
			</children>
		</VBox>
	</center>
	<right>
		<VBox spacing="10.0" id="action-buttons">
			<children>
				<ImageView id="boxImage" fitHeight="60.0" fitWidth="75.0">
					<image>
						<Image url="@../../images/add.png" />
					</image>
				</ImageView>
				<ImageView id="boxImage" fitHeight="80.0" fitWidth="75.0">
					<image>
						<Image url="@../../images/plus.png" />
					</image>
				</ImageView>
				<ImageView id="boxImage" fitHeight="100.0" fitWidth="80.0">
					<image>
						<Image url="@../../images/trash.jpg" />
					</image>
				</ImageView>
			</children>

		</VBox>
	</right>


</BorderPane>
